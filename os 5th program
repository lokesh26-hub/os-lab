#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/shm.h>
#include <sys/ipc.h>
#include <sys/wait.h>

int main()
{
    int pid, shmid, i;
    char *shmptr;

    pid = fork();

    if (pid > 0)   // Parent process
    {
        shmid = shmget(2041, 32, 0666 | IPC_CREAT);
        if (shmid < 0) {
            perror("shmget failed");
            exit(1);
        }

        shmptr = (char *)shmat(shmid, NULL, 0);
        if (shmptr == (char *) -1) {
            perror("shmat failed");
            exit(1);
        }

        printf("\nParent process writing:\n");
        for (i = 0; i < 10; i++)
        {
            shmptr[i] = 'a' + i;
            putchar(shmptr[i]);
        }

        printf("\n");

        wait(NULL);   // Wait for child

        shmdt(shmptr);
        shmctl(shmid, IPC_RMID, NULL);  // Remove shared memory
    }
    else   // Child process
    {
        shmid = shmget(2041, 32, 0666);
        if (shmid < 0) {
            perror("shmget failed");
            exit(1);
        }

        shmptr = (char *)shmat(shmid, NULL, 0);
        if (shmptr == (char *) -1) {
            perror("shmat failed");
            exit(1);
        }

        printf("\nChild process reading:\n");
        for (i = 0; i < 10; i++)
        {
            putchar(shmptr[i]);
        }

        printf("\n");

        shmdt(shmptr);
    }

    return 0;
}
